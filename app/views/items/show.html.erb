<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<div class="panel panel-default">

			<div class="panel-heading centered showbox">
				<%= image_tag @item.image.url %>
  			</div>

  			<div class="panel-body">
				<h2><%= @item.product %>, <span class="pricecolor"><%= number_to_currency(@item.price) %></span></h2>
				<p>
				  <strong>Description:</strong>
				  <%= @item.description %>
				</p>
				<p>
				  <strong>Purchased on:</strong>
				  <%= @item.date.strftime('%B %e, %Y') %>
				</p>
			</div>

			<div class="panel-footer">
				<% if user_signed_in? %>
					<%= link_to 'Edit', edit_item_path(@item) %> |
				<% end %>
				<%= link_to 'All items', items_path %>
			</div>

		</div>
	</div>
</div>
